<%- include('partials/header') %>
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h2 class="h1 display-4"><%= quiz.title %></h2>
            <p class="lead"><%= quiz.description %></p>
            <p class="font-weight-bold">par <%= quiz.author.getFullname() %></p>
            <p class="lead"><%= quiz.questions.length %> questions</p>
        </div>

        <div class="row">
            <% for (const tag of quiz.tags) {%>
                <div class="col-3 p-4 text-center">
                    <a class="btn btn-block btn-lg tag tag--<%= tag.name.toLowerCase() %>" href="/tag/<%= tag.id %>">
                        <%= tag.name %>
                    </a>
                </div>
            <%}%>
        </div>

        <div class="row">

            <% for (let index=0; index<quiz.questions.length; index++) {%>
                <% const question = quiz.questions[index] %>
                <div class="col-12">
                    <label class="badge level level--<%= question.level.name.toLowerCase() %>"><%= quiz.questions[index].level.name %></label>
                    <h4>
                       <%= index+1 %> - <%= question.question %>
                    </h4>
                    <ul>
                        <% for (let index2=0; index2<question.answers.length; index2++) {%>
                            <% const answer = question.answers[index2] %>
                            <li><%= index2 + 1 %>. <%= answer.description %></li>
                        <%}%>
                    </ul>
                </div>
            <%}%>

        </div>


<%- include('partials/footer') %>